# OpenAI API Key (required for AI-powered reviews)
OPENAI_API_KEY=sk-your-actual-openai-api-key-here

# GitHub Personal Access Token (required for PR reviews)
GITHUB_TOKEN=ghp_your-actual-github-token-here

# Secret key for Flask sessions
SECRET_KEY=your-super-secret-random-key-here

# Database path (optional, defaults to code_reviews.db)
DATABASE_PATH=./data/code_reviews.db

# Flask environment
FLASK_ENV=production